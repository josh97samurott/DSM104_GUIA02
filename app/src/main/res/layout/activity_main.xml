<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mi Nombre es: Joshua Caleb Reyes Rosa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.466"
        android:textSize="18dp"
        android:textColor="@color/black"
        />

    <Button
        android:id="@+id/mostrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="pushShowName"
        android:text="Mostrar Nombre"
        app:layout_constraintRight_toRightOf="@+id/nombre"
        app:layout_constraintLeft_toLeftOf="@+id/nombre"
        app:layout_constraintTop_toTopOf="@+id/nombre"
        app:layout_constraintBottom_toBottomOf="parent"

        />

    <Button
        android:id="@+id/ocultar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="pushHideName"
        android:text="Ocultar Nombre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/nombre"
        app:layout_constraintRight_toRightOf="@+id/nombre"
        app:layout_constraintTop_toTopOf="@+id/nombre"

        />

</androidx.constraintlayout.widget.ConstraintLayout>